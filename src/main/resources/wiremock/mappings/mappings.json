{
  "mappings": [
    {
      "request": {
        "method": "GET",
        "url": "/numeric"
      },
      "response": {
        "status": 200,
        "body": "{ \"number\" : \"{{randomValue length=5 type='NUMERIC'}}\"}",
        "headers": {
          "Content-Type": "application/json"
        },
        "delayDistribution": {
          "type": "uniform",
          "lower": 500,
          "upper": 1500
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "url": "/time"
      },
      "response": {
        "status": 200,
        "body": "{ \"time\" : \"{{now format='yyyy-MM-dd HH:mm:ss.SSS'}}\"}",
        "headers": {
          "Content-Type": "application/json"
        },
        "delayDistribution": {
          "type": "uniform",
          "lower": 500,
          "upper": 1500
        }
      }
    },
    {
      "request": {
        "method" : "GET",
        "url": "/400"
      },
      "response": {
        "status": 400
      }
    }
  ]
}